@model Exam.UI.ViewModels.LoginViewModel

@{
    ViewBag.Title = ViewsRes.LoginTitle;
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="well">
            <div class="page-header">
                <h1>@ViewsRes.Login</h1>
            </div>
            
            @Html.ValidationSummary(true)

            @using (Html.BeginForm())
            {
                @Html.EditorForModel()

                <input type="submit" value="@ButtonsRes.Login" class="btn btn-primary" />
            }
        </div>
    </div>
</div>